@model List<Presupuesto>

<div class="container mt-4">
    <h2 class="mb-4">Listado de Presupuestos</h2>

    <a asp-controller="Presupuestos" asp-action="CrearPresupuesto" class="btn btn-primary mb-3">
        <i class="fas fa-plus"></i> Crear Nuevo Presupuesto
    </a>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            No hay presupuestos registrados en el sistema.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Destinatario</th>
                        <th scope="col">Fecha</th>
                        <th scope="col">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var presupuesto in Model)
                    {
                        <tr>
                            <td>@presupuesto.IdPresupuesto</td>
                            <td>@(string.IsNullOrEmpty(presupuesto.NombreDestinatario) ? "-" : presupuesto.NombreDestinatario)</td>
                            <td>@presupuesto.FechaCreacion</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-controller="Presupuestos" asp-action="ListarDetalles" 
                                       asp-route-id="@presupuesto.IdPresupuesto"
                                       class="btn btn-info btn-sm">
                                        <i class="fas fa-info-circle"></i> Detalles
                                    </a>
                                    <a asp-controller="Presupuestos" asp-action="ModificarPresupuesto" 
                                       asp-route-id="@presupuesto.IdPresupuesto"
                                       class="btn btn-warning btn-sm ms-1">
                                        <i class="fas fa-edit"></i> Modificar
                                    </a>
                                    <a asp-controller="Presupuestos" asp-action="EliminarPresupuesto" 
                                       asp-route-id="@presupuesto.IdPresupuesto"
                                       class="btn btn-danger btn-sm ms-1">
                                        <i class="fas fa-trash"></i> Eliminar
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>